<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#05386b">

            <TextView
                android:id="@+id/profilewelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Edit Profile"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="#A5ABBD"
            android:padding="15dp">


            <EditText
                android:id="@+id/editfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="20dp"
                android:hint="First Name"
                android:minHeight="48dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editlastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editfirstname"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="20dp"
                android:hint="Last Name"
                android:minHeight="48dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editlastname"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_contact_emergency_24"
                android:drawablePadding="20dp"
                android:hint="NIC"
                android:minHeight="48dp"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/editphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editnic"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="20dp"
                android:hint="Phone Number"
                android:minHeight="48dp"
                android:textSize="18dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editphone"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="20dp"
                android:hint="Email"
                android:minHeight="48dp"
                android:textSize="18dp"
                android:inputType="textEmailAddress"/>

            <Button
                android:id="@+id/updatebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editemail"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:backgroundTint="#D7A31A"
                android:text="UPDATE" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/changepwbtn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toStartOf="@+id/deactivateaccbtn"
                android:backgroundTint="#056517"
                android:text="Change Password" />

            <Button
                android:id="@+id/deactivateaccbtn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#bf1029"
                android:text="Deactivate Account" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>