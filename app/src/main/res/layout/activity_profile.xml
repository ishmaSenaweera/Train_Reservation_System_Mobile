<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="#05386b">

            <ImageView
                android:id="@+id/profileimage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/profilewelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Welcome"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/profilepicbtn"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/deletepicbtn"
                android:backgroundTint="#056517"
                android:text="Change Profile Picture" />

            <Button
                android:id="@+id/deletepicbtn"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#bf1029"
                android:text="Delete Profile Picture" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="#A5ABBD"
            android:padding="15dp">

            <TextView
                android:id="@+id/profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="20dp"
                android:text="Loading"
                android:textSize="18dp" />

            <View
                android:id="@+id/profiledivider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/profilename"
                android:layout_marginTop="20dp"
                android:background="#414656" />

            <TextView
                android:id="@+id/profilenic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profiledivider1"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_contact_emergency_24"
                android:drawablePadding="20dp"
                android:text="Loading"
                android:textSize="18dp" />

            <View
                android:id="@+id/profiledivider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/profilenic"
                android:layout_marginTop="20dp"
                android:background="#414656" />

            <TextView
                android:id="@+id/profilephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profiledivider2"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="20dp"
                android:text="Loading"
                android:textSize="18dp" />

            <View
                android:id="@+id/profiledivider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/profilephone"
                android:layout_marginTop="20dp"
                android:background="#414656" />

            <TextView
                android:id="@+id/profileemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profiledivider3"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="20dp"
                android:text="Loading"
                android:textSize="18dp" />

            <View
                android:id="@+id/profiledivider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/profileemail"
                android:layout_marginTop="20dp"
                android:background="#414656" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>